<h1> Sign Up </h1>

<%= form_with model: @user, url: sign_up_path do |form| %>

<div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :username, class: "form-control", placeholder: "Username" %>
</div>

<div class="mb-3">
    <%= form.label :email %>
    <%= form.text_field :email, class: "form-control", placeholder: "Email" %>
</div>

<div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
</div>

<div class="mb-3">
    <%= form.submit "Get Started", class: "btn btn-primary" %>
</div>
<% end %>
